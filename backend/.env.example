# Database
DATABASE_URL=postgresql://otfhw_user:otfhw_pass@postgres:5432/otfhw_db

# Redis & Jobs
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=7
OTP_EXPIRATION_SECONDS=300

# Auth
SAML_ENABLED=false
SAML_METADATA_URL=https://your-idp.example.com/metadata.xml
SAML_ENTITY_ID=https://otfhw.example.com
SAML_ACS_URL=https://otfhw.example.com/auth/saml/acs

# OAuth 2.0 (Google & Microsoft)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_azure_app_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging & Observability
LOG_LEVEL=INFO
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
PROMETHEUS_ENABLED=true

# Ingestion
FEED_CHECK_INTERVAL_MINUTES=30
FEED_TIMEOUT_SECONDS=30
SSRF_ALLOWLIST_DOMAINS=feeds.reuters.com,feeds.bloomberg.com,www.securityfocus.com

# GenAI
GENAI_PROVIDER=openai
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4
PROMPT_TEMPLATE_VERSION=v1

# Hunt Connectors (stub config - operators must fill in actual credentials via K8s secrets)
XSIAM_TENANT_ID=your-tenant-id
XSIAM_API_KEY=your-api-key
DEFENDER_TENANT_ID=your-tenant-id
DEFENDER_CLIENT_ID=your-client-id
DEFENDER_CLIENT_SECRET=your-client-secret
WIZ_CLIENT_ID=your-client-id
WIZ_CLIENT_SECRET=your-client-secret

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_CHANNEL_ALERTS=#alerts

# Retention
ARTICLE_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365
HUNT_RESULTS_RETENTION_DAYS=180

# Features
ENABLE_OTP=true
ENABLE_SAML=false
ENABLE_WATCH_LISTS=true
