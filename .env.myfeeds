COMPOSE_PROJECT_NAME=myfeeds

# Database overrides for the MyFeeds environment
POSTGRES_USER=myfeeds
POSTGRES_PASSWORD=ChangeMeMyFeeds!
POSTGRES_DB=myfeeds
MYFEEDS_POSTGRES_USER=${POSTGRES_USER}
MYFEEDS_POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
MYFEEDS_POSTGRES_DB=${POSTGRES_DB}

# URL overrides (use the internal service host names when running with docker compose)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
MYFEEDS_DATABASE_URL=${DATABASE_URL}

REDIS_URL=redis://redis:6379/0
MYFEEDS_REDIS_URL=${REDIS_URL}

# Secret keys for JWT/session signing
SECRET_KEY=super-secret-myfeeds-key
MYFEEDS_SECRET_KEY=${SECRET_KEY}

# Frontend target API for the MyFeeds instance
REACT_APP_API_URL=http://localhost:18000
MYFEEDS_REACT_APP_API_URL=${REACT_APP_API_URL}

# GenAI provider defaults
GENAI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Optional: override other application flags here if needed
