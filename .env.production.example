# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains production-ready configuration examples
# Copy to .env and fill in all required values
# NEVER commit .env file to version control!

# =============================================================================
# Application
# =============================================================================
APP_NAME=HuntSphere
APP_VERSION=1.0.0
DEBUG=false  # MUST be false in production

# =============================================================================
# Database (REQUIRED)
# =============================================================================
POSTGRES_USER=huntsphere_prod
POSTGRES_PASSWORD=  # REQUIRED: 32+ character random password
POSTGRES_DB=huntsphere_production
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# =============================================================================
# Redis (REQUIRED)
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=  # Optional but recommended

# =============================================================================
# Security (REQUIRED)
# =============================================================================
# Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=  # REQUIRED: 32+ characters, cryptographically random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1
REFRESH_TOKEN_EXPIRATION_DAYS=7
OTP_EXPIRATION_SECONDS=300

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins (NO wildcards in production!)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# Initial Admin User (REQUIRED for first-time setup)
# =============================================================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=  # REQUIRED: 16+ characters, complex password

# =============================================================================
# GenAI Configuration
# =============================================================================
GENAI_PROVIDER=openai  # openai, anthropic, gemini, or ollama

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-pro

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# =============================================================================
# Hunt Platform Connectors (Optional)
# =============================================================================
# Palo Alto XSIAM
XSIAM_API_KEY=
XSIAM_BASE_URL=https://api-yourinstance.xdr.us.paloaltonetworks.com

# Microsoft Defender
DEFENDER_TENANT_ID=
DEFENDER_CLIENT_ID=
DEFENDER_CLIENT_SECRET=

# Wiz Cloud Security
WIZ_API_KEY=
WIZ_BASE_URL=https://api.wiz.io

# Splunk
SPLUNK_HOST=
SPLUNK_TOKEN=
SPLUNK_PORT=8089

# VirusTotal
VIRUSTOTAL_API_KEY=

# VMRay
VMRAY_API_KEY=
VMRAY_BASE_URL=https://cloud.vmray.com/api/v1

# =============================================================================
# Notifications (Optional)
# =============================================================================
# Slack
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=huntsphere@yourdomain.com

# ServiceNow
SERVICENOW_INSTANCE=
SERVICENOW_USERNAME=
SERVICENOW_PASSWORD=

# =============================================================================
# SAML/SSO Configuration (Optional)
# =============================================================================
SAML_ENABLED=false
SAML_IDP_ENTITY_ID=
SAML_IDP_SSO_URL=
SAML_IDP_SLO_URL=
SAML_IDP_CERT=
SAML_SP_ENTITY_ID=https://yourdomain.com/saml
SAML_SP_ACS_URL=https://yourdomain.com/saml/acs

# =============================================================================
# Automation Settings
# =============================================================================
ENABLE_AUTOMATION_SCHEDULER=true
FEED_CHECK_INTERVAL_MINUTES=30
AUTO_EXTRACT_INTELLIGENCE=true
AUTO_HUNT_ENABLED=false

# =============================================================================
# Data Retention (days)
# =============================================================================
ARTICLE_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=90
HUNT_RESULT_RETENTION_DAYS=180

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=INFO
JAEGER_ENABLED=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_ENABLED=true
